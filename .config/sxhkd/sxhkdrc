super + Return
    $TERMINAL

super + a
    automount

super + shift + a
    unmount

super + b
    $BROWSER

super + shift + b
    $BROWSER -private-window

super + shift + c
    xdo close

super + d
    dmenu_run

super + shift + e
    lock

super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# expand a window by moving one of its side outward
super + shift + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Swap window with direction
super + ctrl+ shift + {h,j,k,l}
    bspc node -s {west,south,north,east}


super + m
    minecraft-launcher

super + shift + q
    bspc quit

super + shift + r
    bspc wm -r

super + r
    launch

super + t
    tor-browser

# Toggle between floating and tiling
super + {_,shift +}n
    bspc node -t '~{tiled,floating}'

super + v
    vlc

super + shift + v
    virtualbox

# show bar on key press
#super + {_,shift+}x
#    xdotool search --class Polybar {windowunmap %@,windowmap %@ windowraise %@}

super + x
    polybar-msg cmd hide; bspc config -m focused top_padding $((`bspc config -m focused top_padding` - 27 ))

super + shift + x
    polybar-msg cmd show; bspc config -m focused top_padding $((`bspc config -m focused top_padding` + 27 ))

XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10

XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume 0 {+,-}5%; refbar

XF86AudioMute
    pactl set-sink-mute 0 toggle; refbar

super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

# move floating windows
super + {Left,Right,Up,Down}
    xdo move {-x -20,-x +20,-y -20,-y +20}

# Resize floating windows
super + shift + {Left,Right,Up,Down}
    xdo resize {-w -20,-w +20,-h -20,-h +20}

# Change window gap
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))
